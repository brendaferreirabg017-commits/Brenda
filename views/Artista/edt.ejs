<%-include('../cabecalho.ejs')%>
 <header>
        <h3>Editar Artista</h3>
      </header>
      <div class="content">
        <form id="form-Artista" method="post" autocomplete="off" >
          <div class="grid">
            <div>
              <label for="nome">Nome do Artista</label>
              <input id="nome" value="<%=artista.nome%>" name="nome" type="text"  required>
            </div>
            <div>
              <label for="salario">Salário do artista</label>
              <input id="salario" value="<%=artista.salario%>" name="salario" type="text" required>
            </div>
             <div>
              <label for="areaexercida">Area do artista</label>
              <input id="areaexercida" value="<%=artista.areaexercida%>" name="areaexercida" type="text" required>
            </div>
            <div>
              <label for="iniciocontrato">Inicio do contrato</label>
              <input id="iniciocontrato" value="<%=artista.iniciocontrato%>" name="iniciocontrato" type="text" required>
            </div>
            <div>
              <label for="fimcontrato">Fim do contrato</label>
              <input id="fimcontrato" value="<%=artista.fimcontrato%>" name="fimcontrato" type="text" required>
            </div>
           <div class="field-help">Os campos com * são obrigatórios.</div>
          <footer>
            <a type="button" class="btn ghost" id="btn-cancelar" href="/Artista/lst">Cancelar</a>
            <button type="submit" class="btn primary">Editar Artista</button>
          </footer>
        </form>
      </div>

  <%-include('../rodape.ejs')%>